/* pages/recommendSong/recommendSong.wxss */
 .recommendSongContainer{
  width: 100%;
}
/* 头部部分 */
 .recommendSongContainer .header{
   position: relative;
  width: 100%; height: 300rpx;
}
 .recommendSongContainer .header image{
  width: 100%; height: 100%;
}
.recommendSongContainer .header .date{
  position: absolute; top: 50%; left: 50%; 
  transform: translate(-40%,-40%);
  width: 200rpx; height: 100rpx; line-height: 100rpx; text-align: center; color: white; font-size: 38rpx;
}
/* 音乐列表部分 */
 .songContainer{
   position: relative; top: -20rpx;
   background-color: #ffe;  border-radius: 20rpx;
   padding: 10rpx 20rpx; 
 }
 .songContainer .songHeader{
   height: 80rpx; line-height: 80rpx;
 }
 .songContainer .songHeader  .changeSong{
   float: right; color: #0ef8e1; font-size: 26rpx; border: 1rpx solid #eff; width: 80rpx; border-radius: 10rpx;text-align: center; height: 80rpx; line-height: 80rpx;
 }

 /* 歌曲列表区 */
  .songList{
    height: calc(100vh - 380rpx);
  }
  .songItem{display: flex; position: relative;margin-bottom: 20rpx;}
  .songList .songItem image{
    width: 80rpx; height: 80rpx; border-radius: 8rpx;
  }
  .songInfo{
    display: flex; flex-direction: column; margin-left: 26rpx;
    
  }
  .songInfo text{
    height: 40rpx; line-height: 40rpx;
    max-width: 400rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;  
    /* 避免字体超出 */
  }
  .songInfo .songName{
    font-size: 30rpx;
  }
  .songInfo .author{font-size: 24rpx;}
  
  .songItem .iconfont{
    position: absolute; right: 10rpx;
    width: 80rpx; height: 80rpx; line-height: 80rpx; text-align: right;
  }