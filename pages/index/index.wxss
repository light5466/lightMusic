/* pages/index/index.wxss */
/* 轮播图样式 */
 .banner{
   width: 100%; height: 300rpx; 
 }
 .banner image{
   width: 100%; height: 100%;
  }

  /* 导航栏样式 */
   .navContainer{
     display: flex;
   }
   .navItem{
     display:flex; flex-direction: column; align-items:center;width: 20%;
   }
   .iconfont{
     width: 100rpx; height: 100rpx; border-radius: 50%; background-color: #0ef8e1; text-align:center; line-height:100rpx; font-size:50rpx; color: white; margin: 20rpx 0;
   }
   .navTxt{
     font-size: 26rpx;
      /* color: #0ef8e1; */
    }

    /* 推荐歌曲样式 */
     .recommendContainer{ padding: 10rpx 20rpx;}
     .header .title{
       font-size: 24rpx; line-height: 80rpx; color: #888; 
     }
     .header .headerMore{
       font-size: 20rpx; border:1rpx solid #eee; border-radius: 30% ; float:right; padding: 10rpx 20rpx;color: #0ef8e1;
     }

     /* 滑块内容 */
     .recommendScoll{
       margin-top: 20rpx;
       display: flex;
       height: 280rpx;
     }
     .scrollItem{
       width: 200rpx; 
       margin-right: 20rpx;
     }
     .scrollItem image{
       width: 200rpx; height: 200rpx; border-radius: 10%;
     }
     .scrollItem text{
       font-size:22rpx;
       /* color: #0ef8e1; */
       /* 单行文本溢出 省略号代替
       display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; */
       /* 多行文本溢出 */
       overflow: hidden; 
       text-overflow: ellipsis;
       display: -webkit-box;
       -webkit-box-orient:vertical;/*设置对其模板*/
       -webkit-line-clamp:2; /* 设置行数*/
     }

     /* 排行榜样式 */
      .topListSwiper {
        height: 420rpx; 
      }
      .topList{
        padding: 0 20rpx;
      }
      .swiperList{width: 96%; background-color: #eff;}
      .swiperList .title{
        font-size: 28rpx; color: #aaa; line-height: 60rpx;
      }

      .musicItem {
        /* 当给父元素设置成flex时，其子元素也会自动成为block元素 */
        display: flex; 
        margin-bottom: 20rpx;
      }
      .musicItem image{
        width: 100rpx; height: 100rpx; border-radius: 5rpx;
      }
      .musicItem .musicId{
        width: 100rpx; height: 100rpx; line-height: 100rpx; text-align: center;
      }
      .musicItem .musicName{
        line-height: 100rpx; padding-left: 30rpx; font-size: 26rpx;
        /* 防止单行超出 */
        max-width: 400rpx; white-space:nowrap; overflow: hidden;  text-overflow: ellipsis;
      }