<!--pages/login/login.wxml-->
<view class="container">
  <view class="wrapper">
    <view class="leftTopSign">Login</view>
    <view class="welcome">欢迎回来！</view>
    <view class="inputContent">
      <view class="inputItem">
        <text class="tit">手机号码</text>
        <input type="text" placeholder="请输入手机号码"  data-test="abc" data-type="phone" id="phone" bindinput="handleInput"/>
      </view>
      <view class="inputItem">
        <text class="tit">密码</text>
        <input type="password"  placeholder="请输入密码" data-test="abc" data-type="password" id="password" bindinput="handleInput"/>
      </view>
    </view>
    <button class="confirmBtn" bindtap="login">登录</button>
    <view class="forgetSection">忘记密码？</view>
  </view>
  <view class="registerSection">
    还还没有账号？
    <text>马上注册</text>
  </view>
</view>
